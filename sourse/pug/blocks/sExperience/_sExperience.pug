mixin sExperienceListItem(listTitle, listText)
	.col-6(data-aos="fade-up" data-aos-delay="300")
		+e.list-title!= listTitle
		+e.text!= listText
//- (data-aos="fade-up" data-aos-delay="300")
mixin sExperienceItem(imgBg, bankImg, upTitle, title, subText)
	+e.item.section--vh&attributes(attributes)(data-aos="fade-up" data-aos-delay="300")
		+e.img-wrap
			+img(`img/${imgBg}`, 'bg')
		+e.wrap
			+img(`img/svg/${bankImg}`)
			+e.uptitle!= upTitle
			h3!= title
			+e.sub-text!= subText
			+e.row.row
				block
				.col-6
					+e.read(href="#" data-aos="fade-up" data-aos-delay="300")
						+icon('arrow-right-link')
						p Подробнее о проекте

mixin sExperienceMap(id, title, subText, center)
	+e.item.section--vh&attributes(attributes)
		+e.img-wrap
			.map(data-center=`${center}` id=`map-${id}`)
		+e.wrap
			h2!= title
			+e.sub-text!= subText
			+e.num(href="tel:+74956637759") +7 495 663 7759
			+e.email(href="mailto:info@saprun.com") info@saprun.com

