extends ../layout/main.pug

include ../blocks/header/_header.pug
include ../blocks/topLine/_topLine.pug
include ../blocks/top-nav/_top-nav.pug 
include ../blocks/headerBlock/_headerBlock.pug
//- include ../blocks/sContent/_sContent.pug
 
//- include ../blocks/sContact/_sContact.pug 
include ../blocks/sNews/_sNews.pug
include ../blocks/sEvents/_sEvents.pug
include ../blocks/sWays/_sWays.pug
include ../blocks/sTrust/_sTrust.pug
include ../blocks/sJoin/_sJoin.pug 
include ../blocks/sForm/_sForm.pug
include ../blocks/footer/_footer.pug

block variables
	- let  mainPage= 'main-page page-fixed-video' 
	- let  bg= null

block title
	- let  title= index.head.title
	title= title
block pagecontent
	+mob-mnu()
	video(preload='auto' autoplay='autoplay' loop='loop' playsinline='playsinline' muted='muted' poster='img/poster.webp').bg-video
			source(src='video/video.webm' type='video/webm')
			source(src='video/video.mp4' type='video/mp4')
	
	+top-nav()
	+headerBlock.bg-dark.section--vh
	+sNews.bg-white.section--vh
	+sEvents.bg-dark.section--vh
	+sWays.bg-white.section--vh
	+sTrust.bg-dark.section--vh
	+sJoin.bg-white.section--vh
	+sForm().bg-dark.section--vh
	+footer().bg-dark
      



